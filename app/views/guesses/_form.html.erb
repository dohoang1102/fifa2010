<% form_for @guess, :html => {:autocomplete => 'off'} do |f| %>
  <%= f.error_messages %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="hidden">
    <%= f.label :result %><br />
    <%= f.text_area :result %>
  </div>
  <div class="hidden">
    <%= f.label :short_url %><br />
    <%= f.text_field :short_url %>
  </div>
  <div><%= image_submit_tag 'submit.png', :id => "submit" %></div>
<% end %>